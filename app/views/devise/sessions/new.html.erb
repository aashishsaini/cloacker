<div class="page-header">
  <h1>Log in</h1>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "form-horizontal event" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.check_box :remember_me, class: 'checkbox', style: 'margin-right: 10px; float: left'%>
        <%= f.label :remember_me %>
      </div>

    </div>
  <% end %>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Log in" , :class => 'btn btn-primary'%>
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>


