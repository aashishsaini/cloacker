<div class="page-header">
  <h1>Sign up</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <%=f.error_span(:email) %>
  </div>

  <div class="form-group">
    <%= f.label :name , :class => 'control-label col-lg-2'%>
    <div class="col-lg-10">
      <%= f.text_field :name, autocomplete: "name" %>
    </div>
    <%=f.error_span(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :password, :class => 'control-label col-lg-2' %>
    <% if @minimum_password_length %>
      <em class="col-lg-2">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-lg-10">
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    <%=f.error_span(:password) %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    <%=f.error_span(:password_confirmation) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Sign up", :class => 'btn btn-primary' %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
<% end %>


